header.header
  nav.nav.nav--tours
    a.nav__el(href='/') 
      svg.nav__icon(width='20' height='20' viewBox='0 0 24 24' fill='currentColor')
        path(d='M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z')
      span Home
    a.nav__el(href='/tours') 
      svg.nav__icon(width='20' height='20' viewBox='0 0 24 24' fill='currentColor')
        path(d='M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z')
      span All Tours

  .header__logo
    a(href='/')
      img(src='/img/logo-white.png' alt='Travelexa logo')

  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout(href='#')
        svg.nav__icon(width='20' height='20' viewBox='0 0 24 24' fill='currentColor')
          path(d='M16 17v-3H9v-4h7V7l5 5-5 5M14 2a2 2 0 012 2v2h-2V4H4v16h10v-2h2v2a2 2 0 01-2 2H4a2 2 0 01-2-2V4a2 2 0 012-2h10z')
        span Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login')
        svg.nav__icon(width='20' height='20' viewBox='0 0 24 24' fill='currentColor')
          path(d='M10 17v-3H3v-4h7V7l5 5-5 5m4-15a2 2 0 012 2v2h-2V4H6v16h8v-2h2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2h8z')
        span Log in
      a.nav__el.nav__el--cta(href='/signup')
        svg.nav__icon(width='20' height='20' viewBox='0 0 24 24' fill='currentColor')
          path(d='M15 14c-2.67 0-8 1.33-8 4v2h16v-2c0-2.67-5.33-4-8-4zM15 12a4 4 0 100-8 4 4 0 000 8zm-9-8a4 4 0 100 8 4 4 0 000-8z')
        span Sign up
